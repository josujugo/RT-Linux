#!/bin/sh

prefix=`rtai-config --prefix`

if [ "$prefix" == "" ]; then
echo "ERROR: please set your PATH variable to <rtai-install>/bin"
exit
fi

export PYTHONPATH=$prefix/rtai-py

libpath=`rtai-config --library-dir`

if [ "$libpath" == "" ]; then
echo "ERROR: please set your PATH variable to <rtai-install>/bin"
exit
fi

export LD_LIBRARY_PATH=$libpath:$LD_LIBRARY_PATH

if [ $UID != 0 ]; then SUDO="sudo "; else SUDO=""; fi
echo
echo "*** LATENCY MEASUREMENT (user) ***"
echo "Press <enter> to load LXRT modules:"
read junk
./ldmod; 
echo
echo "Now start the realtime process <enter> and wait for its end:"
read junk
echo "Latency task running."
python latency.py
echo "Latency task exited. Press <enter> to remove the modules."
read junk
./remod
